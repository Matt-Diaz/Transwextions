@inherits LayoutComponentBase
@rendermode InteractiveServer

<RadzenComponents @rendermode="InteractiveServer" />

<div class="app">
    <RadzenLayout>
        <RadzenHeader class="app-header">
            <div class="mobile-header-container">
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0" class="mobile-header-stack">
                        <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center">
                            <RadzenImage Path="./images/avatar-placeholder.png" Style="width:64px;" />
                            <RadzenText class="welcome-text" Text="Welcome, Matt!" />
                        </RadzenStack>
               
                        <RadzenText Text="$123.00" class="total-transactions-amount" />
                
                        <RadzenButton Size="ButtonSize.Large" ButtonStyle="ButtonStyle.Success" Icon="finance_chip" Text="Pay Now" />
                 
                </RadzenStack>
            </div>
         
        </RadzenHeader>
        <RadzenSidebar ResponsiveMaxWidth="800px" Style="background:#9fe98c;width: 350px; overflow:hidden;" FullHeight="true" @bind-Expanded="@sidebarExpanded">
            <div class="sidebar-container">
                <div class="logo-container">
                    <RadzenImage Path="./images/logo.png" class="sidebar-image" />
                </div>
                <div class="profile-info-container">
                    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center">
                        <RadzenImage Path="./images/avatar-placeholder.png" Style="width:64px;"/>
                        <RadzenText class="welcome-text" Text="Welcome, Matt!"/>
                    </RadzenStack>
                </div>
                <div class="total-transactions-title-container">
                    <RadzenText Text="Total Transactions" class="total-transactions-title" />
                </div>
                <div class="total-transactions-container">
                    <RadzenText Text="$123.00" class="total-transactions-amount" />
                </div>
                <div class="new-transaction-btn-container">
                    <RadzenButton Size="ButtonSize.Large" ButtonStyle="ButtonStyle.Success" Icon="finance_chip" Text="Pay Now"/>
                </div>
            </div>
        </RadzenSidebar>
        <RadzenBody>
            <div class="rz-p-4">
                @Body
            </div>
        </RadzenBody>
    </RadzenLayout>
</div>
@code {
    bool sidebarExpanded = true;
}